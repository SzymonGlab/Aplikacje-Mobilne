            <!--android:layout_height="80dp" app:srcCompat="@drawable/ic_camera" android:id="@+id/group"-->
            <!--android:layout_weight="4" android:padding="5dp"/>-->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/scrollView">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical" android:id="@+id/scrollViewLayout"
                      tools:layout_editor_absoluteY="8dp">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_camera"
                        android:id="@+id/image_0"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:padding="5dp" android:layout_margin="20dp" android:textAlignment="center"
                        android:layout_weight="4"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_camera"
                        android:id="@+id/image_1"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:padding="5dp" android:layout_margin="20dp" android:layout_marginRight="5dp"
                        android:layout_weight="4"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_camera"
                        android:id="@+id/image_2"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:padding="5dp" android:layout_margin="20dp" android:layout_weight="4"
                        android:layout_marginBottom="10dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_camera"
                        android:id="@+id/image_3"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:padding="5dp" android:layout_margin="20dp" android:layout_marginLeft="0dp"
                        android:layout_weight="4" android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_camera"
                        android:id="@+id/image_4"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:padding="5dp" android:layout_margin="20dp" android:layout_weight="4"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_camera"
                        android:id="@+id/image_5"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:padding="5dp" android:layout_margin="20dp" android:layout_weight="4"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_camera"
                        android:id="@+id/image_6"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:padding="5dp" android:layout_margin="20dp" android:layout_weight="4"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_camera"
                        android:id="@+id/image_7"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:padding="5dp" android:layout_margin="20dp" android:layout_weight="4"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_camera"
                        android:id="@+id/image_8"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:padding="5dp" android:layout_margin="20dp" android:layout_weight="4"
                        android:scaleType="centerCrop"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_camera"
                        android:id="@+id/image_9"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:clickable="true"
                        android:padding="5dp" android:layout_margin="20dp" android:layout_weight="4"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_camera"
                        android:id="@+id/image_10"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:padding="5dp" android:layout_margin="20dp" android:layout_marginRight="5dp"
                        android:layout_weight="4"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_camera"
                        android:id="@+id/image_11"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:padding="5dp" android:layout_margin="20dp" android:layout_marginRight="5dp"
                        android:layout_weight="4"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
