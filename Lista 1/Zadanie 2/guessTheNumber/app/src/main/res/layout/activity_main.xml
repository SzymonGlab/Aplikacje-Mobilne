<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="311dp"
            android:layout_height="36dp"
            android:text="@string/take_a_guess"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.136"
            android:id="@+id/title" app:layout_constraintHorizontal_bias="0.498"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="26sp" android:textAlignment="center" android:textStyle="bold"/>
    <Button
            android:text="@string/guess"
            android:layout_width="242dp"
            android:layout_height="64dp"
            android:id="@+id/bGuess" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintVertical_bias="0.499"
            android:onClick="buttonClick" android:textStyle="italic"/>
    <EditText
            android:layout_width="116dp"
            android:layout_height="130dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/userInput" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintVertical_bias="0.263" android:textStyle="bold|italic" android:textAllCaps="true"
            android:textSize="60sp" android:textAlignment="center"/>


    <TextView
            android:layout_width="116dp"
            android:layout_height="130dp"
            android:text="?"
            android:ems="10"
            android:id="@+id/randNumb" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintVertical_bias="0.265" android:textStyle="bold|italic" android:textSize="60sp"
            android:textAlignment="center" android:textColor="@android:color/black" android:textAllCaps="true"
            android:layout_marginBottom="8dp" android:paddingTop="20dp"/>
    <TextView
            android:text="@string/sign"
            android:layout_width="67dp"
            android:layout_height="71dp"
            android:id="@+id/sign" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.288"
            android:textSize="50sp" android:textAlignment="center"/>
    <TextView
            android:layout_width="68dp"
            android:layout_height="16dp"
            android:id="@+id/points" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.904"
            app:layout_constraintVertical_bias="0.033" android:text="@string/points"/>
    <TextView
            android:layout_width="157dp"
            android:layout_height="22dp"
            android:id="@+id/attempts" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.576" app:layout_constraintHorizontal_bias="0.509"
            android:textAlignment="center" android:text="@string/attempt_no"/>
    <TextView
            android:text="@string/best_guess"
            android:layout_width="98dp"
            android:layout_height="19dp"
            android:id="@+id/record" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.08" app:layout_constraintVertical_bias="0.033"/>

</android.support.constraint.ConstraintLayout>